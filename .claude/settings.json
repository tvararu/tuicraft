{
  "enabledPlugins": {
    "claude-code-setup@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs bunx prettier --write 2\u003e/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "fp=$(jq -r '.tool_input.file_path'); tf=\"${fp%.ts}\"; tf=\"${tf%.test}.test.ts\"; [ -f \"$tf\" ] \u0026\u0026 bun test \"$tf\" --bail || true"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code post-task"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code post-todo"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.command' | grep -q 'git commit' \u0026\u0026 [ \"$(git branch --show-current)\" = \"main\" ] \u0026\u0026 echo 'BLOCK: Do not commit to main. Create a feature branch first.' \u0026\u0026 exit 2 || exit 0"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code pre-task"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code session-end"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          },
          {
            "type": "command",
            "command": "entire hooks claude-code session-start"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code stop"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code user-prompt-submit"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(./dist/tuicraft:*)",
      "Bash(entire doctor:*)",
      "Bash(entire explain:*)",
      "Bash(entire help:*)",
      "Bash(entire status:*)",
      "Bash(entire version:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh search:*)",
      "Bash(git add:*)",
      "Bash(git check-ignore:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git stash:*)",
      "Bash(mise build:*)",
      "Bash(mise ci:*)",
      "Bash(mise format:*)",
      "Bash(mise start:*)",
      "Bash(mise tasks:*)",
      "Bash(mise test:*)",
      "Bash(mise typecheck:*)",
      "Skill(claude-md-management:revise-claude-md)",
      "WebFetch(domain:bun.com)",
      "WebFetch(domain:docs.entire.io)",
      "WebFetch(domain:mise.jdx.dev)",
      "WebFetch(domain:tuicraft.vararu.org)",
      "WebFetch(domain:wowdev.wiki)",
      "WebSearch"
    ],
    "deny": [
      "Bash(env :*)",
      "Bash(env)",
      "Bash(export :*)",
      "Bash(export)",
      "Bash(mise env :*)",
      "Bash(mise env)",
      "Bash(printenv:*)",
      "Bash(set)",
      "Read(./.entire/metadata/**)"
    ]
  }
}
